#include<iostream>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int a,b;
        cin>>a>>b;
        if(b<a){
            int dif=a-b;
            int fin=a - dif;
            cout<<fin+b<<endl;
        }
        else if(b>a){
            int di=b-a;
            int fi=b-di;
            cout<<fi+a<<endl;
            
        }
        else if(a==b){
            cout<<a*2-1<<endl;
        }
        
            
        
    }
    
    
